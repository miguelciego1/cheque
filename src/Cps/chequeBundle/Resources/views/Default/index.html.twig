<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Caja Petrolera de Salud{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('logo.png') }}" />
    <!-- Bootstrap -->
    <link href="{{ asset('build/css/base.css') }}" rel="stylesheet">
    <link href="{{ asset('vendors/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('build/css/base.css') }}" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img class="logo" src="{{ asset('logo.png') }}" alt="logo"> <a href="#" class="titulo">Caja Petrolera de Salud</a>
            </div>
        </div>
    </nav>
    {% block body %}
    <div class="container mensaje">
        {% for flashMessaje in app.session.flashbag.get ('mensaje')%}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button> {{ flashMessaje}}
        </div>
        {% endfor %}
        {% for flashMessaje in app.session.flashbag.get ('advertencia')%}
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button> {{ flashMessaje}}
        </div>
        {% endfor %}
    </div>
    <div class="con">
        <div class="contenedor">
            <div class="carta">
                <div class="lado frente"><img src="{{ asset('chequefer.png') }}" alt="Imagen  de Cheque"></div>
                <div class="lado atras">
                    <div class="list-group">
                        <a class="list-group-item active"> CHEQUE </a>
                        <a href="{{ path('comprobante_index')}}" class="list-group-item ">Comprobante</a>
                        <a href="{{ path('cheque_index')}}" class="list-group-item">Cheque</a>
                        <a href="{{ path('cheque_anulado')}}" class="list-group-item">Cheque Anulado</a>
                        <a href="{{ path('cheque_revertido')}}" class="list-group-item">Revertir Cheque</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="contenedor">
            <div class="carta">
                <div class="lado frente"><img src="{{ asset('reportefer.png') }}" alt="Imagen de Reporte"></div>
                <div class="lado atras">
                    <div class="list-group">
                        <a class="list-group-item active">REPORTES</a>
                        <a href="{{ path('cheque_reporte_usuario')}}" class="list-group-item">Reporte de cheque por Usuario</a>
                        <a href="{{ path('cheque_reporte')}}" class="list-group-item">Reporte de Cheque General</a>
                        <a href="{{ path('cheque_reporte_excel')}}" class="list-group-item">Reporte Excel</a> 
                    </div>
                </div>
            </div>
        </div>
        <div class="contenedor">
            <div class="carta">
                <div class="lado frente"><img src="{{ asset('mchequefer.png') }}" alt="Imagen de Seguimiento"></div>
                <div class="lado atras">
                    <div class="list-group">
                        <a class="list-group-item active">SEGUIMIENTO</a>
                        {#<a href="{{ path('movimiento_listado', { 'estado':'1' }) }}" class="list-group-item">Lista de Cheques</a>#}
                        <a href="{{ path('movimiento_pendiente') }}" class="list-group-item">Recibidos</a>
                        <a href="{{ path('movimiento_listado', { 'estado':'2' }) }}" class="list-group-item">Enviados</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %} {% block javascripts %}
    <script src="{{ asset('vendor/jquery/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('vendor/jquery/jquery.backstretch.min.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () { $.backstretch(["{{ asset('vendors/img/fondo.png') }}"]); });
    </script>
    {% endblock %}
</body>

</html>