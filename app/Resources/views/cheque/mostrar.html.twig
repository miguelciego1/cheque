{% extends 'main.html.twig' %}

{% block body %}

<style type="text/css">
         .contenedorCheque{
            background-image: url("{{ asset('img_cheque.png') }}");
            width: 627px;
            height: 264px;
            font-family: arial;
            color:#000;
         }
         h5{
            font-weight: bold;
         }
         .superior{
            width: 100%;
            height: 20%;
         }
         .inferior{
            width: 100%;
            height: 80%;
        }
        label{
            
            margin: 0;
            padding: 0;
        }
        .fecha{
            margin-left: 200px;
            padding-top: 26px;
        }
        .monto{
            margin-top:40px;
            margin-right: 45px;
        }
        .nombre{
            display:block;
            padding-top: 12px;
            margin-left: 100px;
        }
        .numeroLetra{
            display:block;
            padding-top: 5px;
            margin-left: 100px;
        }
        @media print {
        #print{
            display:none;
        }
        label{
            font-size:13px;
            font-weight:100;
        }
        .fecha{
          padding-top: 20px;
        }
         .nombre{
            display:block;
            width:100%;
            padding-top: 2px;
            
        }
        .nav_menu{
            display:none;
        }
        .monto{
            margin-top:30px;
            margin-right:57px;
        }
        }
         </style>
    <h2 id="print">Cheque N° "{{cheque.cheque}}"</h2>
    <table class="table">
        <div class="container">
            <div id="myPrintArea">
                <div class="contenedorCheque">
                        <div class="superior">
                            <label class="fecha">Santa Cruz,{{fecha}}</label> 
                            <label for="money" id="currencyField" class="monto pull-right currency">{{cheque.monto}}</label>
                      </div>
                        <div class="inferior">   
                            <label class="nombre">{{cheque.benficiario}}</label>
                            <label class="numeroLetra">*** {{ montoLiteral }} ***</label>

                        </div>
                </div>
            </div>

         </div>      
    </table>

       <br></br>
     <a  href=" {{ path('cheque_index')}} " class="btn btn-default" type="button">Volver atrás</a>
    
{% endblock %}
    {% block javascript %}
     <!-- jQuery -->
    <script src="{{ asset('vendors/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('vendors/jquery/dist/jquery.priceformat.min.js') }}"></script>
    <script src="{{ asset('vendors/jquery/dist/jquery.PrintArea.js') }}"></script>
    <script src="{{ asset('vendors/jquery/dist/NumeroALetras.js') }}"></script>
    <!-- Bootstrap -->
    <script src="{{ asset('vendors/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <!-- FastClick -->
    <script src="{{ asset('vendors/fastclick/lib/fastclick.js') }}"></script>
    <!-- NProgress -->
    <script src="{{ asset('vendors/nprogress/nprogress.js') }}"></script>
    {% block javascripts %}{% endblock %}
    
    <!-- Custom Theme Scripts -->
    <script src="{{ asset('build/js/custom.min.js') }}"></script>
    <script type="text/javascript">

            $(document).ready(function()
            {   
               
                $('#currencyField').priceFormat({
                    clearPrefix: true
                });
            });
        </script>
{% endblock %}
